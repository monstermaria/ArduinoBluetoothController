<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showReadingsAndSettingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openReadingsAndSettings"
        android:text="@string/show_readings_and_settings" />

    <Button
        android:id="@+id/bluetoothSettingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openBluetoothSettings"
        android:text="@string/bluetooth_settings" />

</LinearLayout>